{
  "name": "sidecar",
  "displayName": "Sidecar",
  "description": "Stay in flow while building with AI",
  "version": "0.0.44",
  "publisher": "JakePark",
  "repository": {
    "type": "git",
    "url": "https://github.com/team-attention/sidecar.git"
  },
  "license": "MIT",
  "icon": "assets/sidecar-icon.png",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "ai",
    "vibe coding",
    "code review",
    "claude",
    "codex",
    "gemini"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sidecar.resetAutoOpen",
        "title": "Sidecar: Reset Auto-Open Setting"
      },
      {
        "command": "sidecar.attachToTerminal",
        "title": "Sidecar: Attach to Terminal"
      }
    ],
    "configuration": {
      "title": "Sidecar",
      "properties": {
        "sidecar.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect Claude Code, Codex, and Gemini CLI execution"
        },
        "sidecar.autoShowPanel": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show Sidecar panel when AI is detected"
        },
        "sidecar.includeFiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Glob patterns for files to track even if they are gitignored (e.g., ['dist/**', '.env.local'])"
        },
        "sidecar.fileWatchDebounceMs": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "maximum": 2000,
          "description": "Debounce delay for file change events in milliseconds. Set to 0 to disable debouncing. (Default: 300ms)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify && npm run esbuild-webview -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-webview": "esbuild ./src/adapters/inbound/ui/webview/webview-entry.ts --bundle --outfile=dist/webview.js --format=iife --platform=browser --target=es2020",
    "esbuild": "npm run esbuild-base -- --sourcemap && npm run esbuild-webview -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "npm run compile && mocha --ui tdd ./out/test/**/*.test.js"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^5.3.2",
    "shiki": "^3.19.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "mocha": "^11.0.1",
    "typescript": "^5.4.5"
  }
}
