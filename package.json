{
  "name": "sidecar",
  "displayName": "Sidecar",
  "description": "Real-time code review interface for AI coding assistants",
  "version": "0.0.4",
  "publisher": "JakePark",
  "repository": {
    "type": "git",
    "url": "https://github.com/team-attention/sidecar.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "ai",
    "vibe coding",
    "code review",
    "claude",
    "codex",
    "gemini"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sidecar.showPanel",
        "title": "Sidecar: Show Panel"
      },
      {
        "command": "sidecar.focusPanel",
        "title": "Sidecar: Focus Panel"
      },
      {
        "command": "sidecar.submitComments",
        "title": "Sidecar: Send Comments to AI"
      },
      {
        "command": "sidecar.addComment",
        "title": "Sidecar: Add Comment"
      },
      {
        "command": "sidecar.addToWhitelist",
        "title": "Sidecar: Add File/Pattern to Whitelist"
      },
      {
        "command": "sidecar.manageWhitelist",
        "title": "Sidecar: Manage Whitelist"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sidecar.addComment",
          "group": "sidecar",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Sidecar",
      "properties": {
        "sidecar.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect Claude Code, Codex, and Gemini CLI execution"
        },
        "sidecar.autoShowPanel": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show Sidecar panel when AI is detected"
        },
        "sidecar.includeFiles": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Glob patterns for files to track even if they are gitignored (e.g., ['dist/**', '.env.local'])"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
